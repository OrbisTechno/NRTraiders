@model List<NRTraiders.Models.Product>
<h1>List of Products</h1>


    <table class="table table-striped">
        <tr>
            <th><label asp-for="@Model.FirstOrDefault().Name"></label></th>
            <th colspan="2"></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>
                    <form asp-page="EditProduct" asp-page-handler="edit" class="edit" asp-route-id="@item.Id" method="post">
                        <button class="btn btn-primary">Edit</button>
                        </form>
                </td>
                <td>
                    <form asp-page-handler="delete" asp-route-id="@item.Id" method="post">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>

        }
    </table>

