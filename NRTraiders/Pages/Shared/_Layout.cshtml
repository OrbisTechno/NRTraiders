<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NRTraiders</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary fixed-top">
            <a class="navbar-brand" asp-area="" asp-page="/Index">NRTraiders</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link text-white" asp-area="" asp-page="/Index">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-white" id="ProductsMenu" href="#Products">Products</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-white" id="SparePartsMenu" href="#SpareParts">Spare Parts</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-white" id="ServicesMenu" href="#Services">Services</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link text-white" asp-page="AddItem">Add Product</a>
                    </li>
                   
                    <li class="nav-item">
                        <a class="nav-link text-white" id="AboutUsMenu" href="#AboutUs">About Us</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" id="ContactUsMenu" href="#ContactUs">Contact Us</a>
                    </li>


                </ul>
                <div class="mr-3 ml-3">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Register">Register</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Login">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="p-5" style="margin-top:45px;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted text-center">

        &copy; 2020 - NRTraiders - <a asp-area="" asp-page="/Privacy">Privacy</a>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
    <script>
        $("#ProductsMenu").click(function () {
            $('html, body').animate({
                scrollTop: $("#Products").offset().top - 77
            }, 1000);
            return false;
        });

        $("#SparePartsMenu").click(function () {
            $('html, body').animate({
                scrollTop: $("#SpareParts").offset().top - 77
            }, 1000);
            return false;
        });

        $("#ServicesMenu").click(function () {
            $(' html,body').animate({
                scrollTop: $("#Services").offset().top - 77
            }, 1000);
            return false;
        });

        $("#AboutUsMenu").click(function () {
            $(' html,body').animate({
                scrollTop: $("#AboutUs").offset().top - 77
            }, 1000);
            return false;
        });

        $("#ContactUsMenu").click(function () {
            $(' html,body').animate({
                scrollTop: $("#ContactUs").offset().top - 77
            }, 1000);
            return false;
        });

    </script>
</body>
</html>
