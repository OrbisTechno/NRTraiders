@page
@model NRTraiders.Pages.AddProductModel


<div class="border container" style="padding:30px;">
    <div class="text-center mt-2 mb-5">Add Product</div>

    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Product.Name" />
            </div>
            <span style="color:red" asp-validation-for="Product.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.Description"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Product.Description" />
            </div>
            <span style="color:red" asp-validation-for="Product.Description"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Product.ImageUrl"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Product.ImageUrl" />
            </div>
            <span style="color:red" asp-validation-for="Product.ImageUrl"></span>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Add Product" class="btn btn-primary form-control add" />
            </div>
            <div class="col-3">
                <a asp-page="ProductsList" class="btn btn-success form-control">Back to Products List</a>
            </div>
        </div>
    </form>
    <partial name="_Products" model="@Model.Products" />


</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}


