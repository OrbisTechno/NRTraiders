@page
@model NRTraiders.Pages.AddItemModel
<div class="border container" style="padding:30px;">
    <div class="text-center mt-2 mb-5">Add Item</div>

    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Item.Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Item.Name" />
            </div>
            <span style="color:red" asp-validation-for="Item.Name"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Item.Description"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Item.Description" />
            </div>
            <span style="color:red" asp-validation-for="Item.Description"></span>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Item.ImageUrl"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Item.ImageUrl" />
            </div>
            <span style="color:red" asp-validation-for="Item.ImageUrl"></span>
        </div>

        <div class="form-group row">
            <div class="col-4">
                <label >Item Type</label>
            </div>
            <div class="col-6">
                <select class="form-control"  asp-items="Model.ItemTypes" asp-for="Item.ItemTypeId"></select>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Add Item" class="btn btn-primary form-control add" />
            </div>
            <div class="col-3">
                <a asp-page="ItemsList" class="btn btn-success form-control">Back to Items List</a>
            </div>
        </div>
    </form>
    <partial name="_Items" model="@Model.Items" />


</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}