@page
@model NRTraiders.Pages.EditItemModel
@{
}
<div class="border container" style="padding : 30px;">
    <form method="post">
        <input type="hidden" asp-for="Item.Id" />

        <div class="form-group row">
            <div class="col-4">

                <label asp-for="Item.Name"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Item.Name" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">

                <label asp-for="Item.Description"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Item.Description" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">

                <label asp-for="Item.ImageUrl"></label>
            </div>
            <div class="col-6">
                <input class="form-control" asp-for="Item.ImageUrl" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">

                <label >Item Type</label>
            </div>
            <div class="col-6">
                <select class="form-control" asp-items="Model.ItemTypes" asp-for="Item.ItemTypeId"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-3 offset-4">
                <input type="submit" value="Update Item" class="btn btn-primary form-control" />
            </div>
            <div class="col-3">
                <a asp-page="ItemsList" class="btn btn-success form-control">Back to Items List</a>
                @*<button type="button" asp-page="ItemsList" class="btn btn-success form-control">Back to Items List</button>*@
            </div>
        </div>


    </form>
    @*<partial name="_Products" model="@Model.Products" />*@
</div>